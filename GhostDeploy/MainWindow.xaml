<Window x:Class="GhostDeploy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GhostDeploy"
        mc:Ignorable="d"
        Title="GhostDeploy" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Menu Grid.Row="0">
			<MenuItem Header="設定">
				<MenuItem Header="アップロード設定" Command="{Binding UploadSettingCommand}"/>
			</MenuItem>
		</Menu>
		
		<StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="アップロードするシェルやゴーストのフォルダをドロップして選択" Margin="5" HorizontalAlignment="Center" TextWrapping="Wrap"/>
			<TextBlock Text="{Binding DirectoryPath}" Margin="5" HorizontalAlignment="Center" TextWrapping="Wrap"/>
			<Button Content="アップロード先の選択に進む" Command="{Binding UploadCommand}" Margin="5" HorizontalAlignment="Center" Padding="10 2 10 2"/>
		</StackPanel>
    </Grid>
</Window>
